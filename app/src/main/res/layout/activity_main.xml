<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_popup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/random2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"/>

    <Button
        android:id="@+id/random1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="랜덤1"
        app:layout_constraintBottom_toBottomOf="@id/random2"
        app:layout_constraintEnd_toStartOf="@+id/random2"/>

    <Button
        android:id="@+id/random2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="랜덤2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/random3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="랜덤3"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/random2"
        app:layout_constraintBottom_toBottomOf="@id/random2" />



</androidx.constraintlayout.widget.ConstraintLayout>